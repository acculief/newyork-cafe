<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Favorite count</th>
      <th>View count</th>
      <th>Like count</th>
      <th>Dislike count</th>
      <th>Comment count</th>
      <th>Products url</th>
      <th>Youtuber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.favorite_count %></td>
        <td><%= product.view_count %></td>
        <td><%= product.like_count %></td>
        <td><%= product.dislike_count %></td>
        <td><%= product.comment_count %></td>
        <td><%= product.products_url %></td>
        <td><%= product.youtuber_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

